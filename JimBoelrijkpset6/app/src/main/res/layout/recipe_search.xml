<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.example.jim.jimboelrijkpset6.viewholder.RecipeSearchActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/explanation"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="50dp"
        android:paddingBottom="80dp"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/search_by_ingredients_comma_separated"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:id="@+id/textView2"
        android:layout_marginBottom="30dp" />

    <EditText
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/search_request"
        style="@android:style/Widget.AutoCompleteTextView"
        android:hint="@string/enter_ingredients"
        android:inputType="text" />

    <Button
        android:text="@string/get_me_a_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="do_search"
        android:id="@+id/search_request_button"
        style="@android:style/Widget.Button" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/chef"
        android:background="@android:color/white"
        android:id="@+id/imageView2" />

</LinearLayout>
